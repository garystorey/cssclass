{
  "name": "ts-package-rollup",
  "version": "1.2.1",
  "description": "A rollup template for building JavaScript library.",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "exports": {
    ".": {
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs",
      "types": "./dist/main.d.ts"
    }
  },
  "types": "./dist/main.d.ts",
  "scripts": {
    "prepublishOnly": "rollup -c",
    "build": "rollup -c",
    "test": "vitest --watch",
    "release": "bumpp --commit --push --tag",
    "lint": "eslint --fix src",
    "pretty": "npx prettier src --write --loglevel warn",
    "push": "npm run ci-test && npm run ci-lint && npm run ci-pretty && npm run build",
    "ci-lint": "eslint src --ext .ts,.tsx --fix --quiet",
    "ci-pretty": "npx prettier src --write --loglevel error",
    "ci-test": "cross-env CI=true vitest --run"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seanghay/ts-package-rollup.git"
  },
  "keywords": [
    "rollup",
    "vitest",
    "typescript",
    "jest"
  ],
  "author": "Seanghay Yath <seanghay.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seanghay/ts-package-rollup/issues"
  },
  "homepage": "https://github.com/seanghay/ts-package-rollup#readme",
  "packageManager": "pnpm@6.32.10",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@types/rollup": "^0.54.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "bumpp": "^7.1.1",
    "conventional-github-releaser": "^3.1.5",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.38",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "rollup": "^2.70.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^4.2.1",
    "rollup-plugin-esbuild": "^4.9.1",
    "typescript": "^4.6.3",
    "vitest": "^0.10.0"
  }
}
